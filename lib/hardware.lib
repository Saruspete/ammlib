# @description  Get the vendor detail from th PCI-IDS DB
function ammHardware::VendorGetFromPciid {
	typeset pciid="$1"

	ammHardware::DbInit

	# Default to the given ID
	typeset vendor="$pciid"
	typeset pcidb="$__AMMHARDWARE_DB_PCI"
	if [[ -n "$vendorid" ]] && [[ -e "$pcidb" ]]; then
		vendor="$(grep "^${vendorid#0x}" "$pcidb")"
		vendor="${vendor#* }"
	fi
	echo "${vendor# }"

}

