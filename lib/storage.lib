function ammStorage::GetHost {
	typeset dev="$(ammStorage::GetKernelName "$1")"
	typeset host="$(readlink -f "/sys/class/block/$dev")"
	host="${host#*host}"
	host="${host%/*}"
	host="host${host}"
}

function ammStorage::GetTransport {
