# Hash and crypto
# -----------------------------------------------------------------------------

function ammString::HashMD5 {
	typeset str="${1:--}"
	typeset salt="${2:-}"

	if [[ "$str" == "-" ]] && [[ -n "$salt" ]]; then
		ammLog::Wrn "$FUNCNAME: Cannot set a salt when reading from stdin"
	fi

	if ammExec::Exists "md5sum"; then
		if [[ -r "$str" ]] || [[ "$str" == "-" ]]; then
			(echo -n "$salt"; cat "$str") | md5sum "-" | cut -f 1 -d " "
		else
			echo -n "${salt}${str}" | md5sum | cut -f 1 -d " "
		fi
	elif ammExec::Exists "openssl"; then
		if [[ -r "$str" ]]; then
			(echo -n "$salt"; cat "$str") | openssl md5 | cut -f 2 -d " "
		elif [[ "$str" == "-" ]]; then
			openssl md5 | cut -f 2 -d " "
		else
			echo -n "${salt}${str}" | openssl md5 | cut -f 2 -d " "
		fi
	else
		ammLog::Err "No MD5 generator available (openssl or md5sum)"
		return 1
	fi

	return 0
}

