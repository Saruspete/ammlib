# -----------------------------------------------------------------------------
# Pretty print and display helpers
# -----------------------------------------------------------------------------
function ammString::Repeat {
	typeset -i time="${1:-1}"
	typeset    char="${2:- }"
	seq -s "$char" $(($time+1)) | tr -d '[:digit:]'
}


