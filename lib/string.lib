function ammString::CountWords {
	typeset -a arr=($@)
	echo ${#arr[@]}
}

function ammString::CountLines {
	typeset input="$1"

	typeset wcout=""

	if [[ -e "$input" ]]; then
		wcout="$(wc -l $input)"

	else
		wcout="$(echo "$input" | wc -l)"
	fi

	echo ${wcout%% *}
}

